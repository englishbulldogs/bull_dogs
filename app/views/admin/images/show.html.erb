<% content_for :stylesheets do %>
	<%= stylesheet_link_tag 'admin/images/show' %>
<% end %>
<% content_for :menu do %>
	<li class="menu_item active-menu"><%=link_to 'manage albums', admin_albums_path%></li>
	<li class="menu_item"><%= link_to "Back", admin_album_images_path(@album) %> </li>
<% end %>
<%= image_tag @image.picture, :width => "500px" if @image.picture? %>
<%= content_tag(:p, "Title: " + @image.title?.to_s, :class => "details") %>
<%= content_tag(:p,  "Description: " + @image.description?.to_s, :class => "details") %>
<%= button_to "Delete", admin_album_image_path(@album, @image), :method => :delete, :style => "display: block;" %>