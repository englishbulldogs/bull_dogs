<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'admin/new' %>
<% end %>
<% content_for :menu do %>
  <li class="menu_item active-menu"><%=link_to 'manage albums', admin_albums_path%></li>
<% end %>
    <%= link_to "< Cancel", admin_albums_path, :id => "return_link" %> </br>
      <%= form_for([:admin,@album], :action => "new") do |f| %>
      <%= f.hidden_field :album_id %>
  <div class="field">
    <%= f.label :title, "Puppy Name" %><br />
    <%= f.text_field :title %> </br>
    <%= f.label :price, "Puppy Price" %><br />
    <%= f.text_field :price %> </br>
  </div>
  <div class="field">
    <%= f.label :description, "Damsel Name" %><br />
    <%= f.text_field :description %> </br>
    <%= f.label :picture, "Damsel Picture" %> </br>
    <%= f.file_field :picture %></br>
    <%= f.label :dad, "Sire Name" %><br />
    <%= f.text_field :dad %> </br>
    <%= f.label :picture, "Sire Picture" %> </br>
    <%= f.file_field :dadpic %>
  </div>
  <div class="actions">
    <%= f.submit "Create Dog" %>
  </div>
<% end %>
